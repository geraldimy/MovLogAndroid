<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    app:cardCornerRadius="4dp"
    app:contentPadding="4dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        >

        <ImageView
            android:id="@+id/imagemov"
            android:layout_width="96dp"
            android:layout_height="136dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/yearmov"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="2019"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagemov"
            android:fontFamily="sans-serif">
        </TextView>


        <TextView
            android:id="@+id/titlemov"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Movie Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagemov"
            app:layout_constraintTop_toBottomOf="@+id/yearmov"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/genmov"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textSize="18dp"
            android:text="Comedy, Action"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagemov"
            app:layout_constraintTop_toBottomOf="@+id/titlemov"
            android:fontFamily="sans-serif"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_star_gold_24dp"
            app:layout_constraintStart_toEndOf="@+id/imagemov"
            app:layout_constraintTop_toBottomOf="@+id/genmov" />

        <TextView
            android:id="@+id/ratemov"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:text="7"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/genmov"
            app:layout_constraintLeft_toRightOf="@id/star"
            android:textStyle="bold"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>